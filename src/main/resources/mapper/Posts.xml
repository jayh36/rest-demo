<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.PostsRepository">

    <select id="getAllPosts" resultType="com.example.demo.model.Posts">
        SELECT id
             , title
             , content
             , author
        FROM POSTS
    </select>

    <select id="getPostsById" resultType="com.example.demo.model.Posts">
        SELECT id
             , title
             , content
             , author
        FROM POSTS
        WHERE 1 = 1
        <if test="id != null">
            AND id = #{id}
        </if>
    </select>

</mapper>